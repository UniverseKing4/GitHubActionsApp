<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Dark Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/surface_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="android:colorBackground">@color/surface_dark</item>
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/surface_dark</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/border_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/spacing_lg</item>
        <item name="android:paddingEnd">@dimen/spacing_lg</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/ripple_dark</item>
    </style>
    
    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="rippleColor">@color/ripple_dark</item>
    </style>
    
    <!-- Input Styles -->
    <style name="Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_dark</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/button_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_radius</item>
        <item name="hintTextColor">@color/text_tertiary_dark</item>
        <item name="android:textColorHint">@color/text_tertiary_dark</item>
    </style>
    
    <!-- Card Style -->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_elevated_dark</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/border_dark</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="Text.Display">
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="Text.Headline">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    
    <style name="Text.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Editor Style -->
    <style name="Editor">
        <item name="android:textSize">@dimen/editor_text_size</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:padding">@dimen/editor_padding</item>
        <item name="android:background">@color/editor_bg_dark</item>
    </style>
    
    <!-- Tab Style -->
    <style name="Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextColor">@color/text_secondary_dark</item>
        <item name="tabSelectedTextColor">@color/text_primary_dark</item>
        <item name="tabBackground">@color/surface_elevated_dark</item>
        <item name="tabMinHeight">@dimen/tab_height</item>
    </style>
</resources>
