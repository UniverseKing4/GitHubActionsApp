<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================
         BASE THEME - DARK (DEFAULT)
         Professional dark theme optimized for
         long coding sessions
         ============================================ -->
    <style name="Theme.GitCode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_container</item>
        <item name="colorOnPrimary">@color/dark_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/dark_primary</item>
        <item name="colorSecondaryVariant">@color/dark_primary_container</item>
        <item name="colorOnSecondary">@color/dark_on_primary</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <item name="colorOnSurfaceVariant">@color/dark_on_surface_variant</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/dark_error</item>
        <item name="colorOnError">@color/dark_on_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.GitCode.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.GitCode.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.GitCode.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.GitCode.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.GitCode.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.GitCode.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GitCode.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.GitCode.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GitCode.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GitCode.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.GitCode.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GitCode.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.GitCode.Overline</item>
        
        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GitCode.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.GitCode.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.GitCode.LargeComponent</item>
        
        <!-- Ripple -->
        <item name="colorControlHighlight">@color/dark_ripple</item>
        <item name="rippleColor">@color/dark_ripple</item>
        
        <!-- Dialog -->
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:dialogPreferredPadding">24dp</item>
        
        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.GitCode.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.GitCode.Button.TextButton</item>
        
        <!-- TextInput -->
        <item name="textInputStyle">@style/Widget.GitCode.TextInputLayout</item>
        
        <!-- Card -->
        <item name="cardViewStyle">@style/Widget.GitCode.CardView</item>
    </style>
    
    <!-- ============================================
         LIGHT THEME
         Clean, premium light theme
         ============================================ -->
    <style name="Theme.GitCode.Light" parent="Theme.GitCode">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary_container</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorSurfaceVariant">@color/light_surface_variant</item>
        <item name="colorOnBackground">@color/light_on_background</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <item name="colorOnSurfaceVariant">@color/light_on_surface_variant</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/light_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/light_background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/light_error</item>
        
        <!-- Ripple -->
        <item name="colorControlHighlight">@color/light_ripple</item>
        <item name="rippleColor">@color/light_ripple</item>
    </style>
    
    <!-- ============================================
         TYPOGRAPHY
         Professional, readable typography scale
         ============================================ -->
    <style name="TextAppearance.GitCode.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>
    
    <style name="TextAppearance.GitCode.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>
    
    <style name="TextAppearance.GitCode.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.GitCode.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.0075</item>
    </style>
    
    <style name="TextAppearance.GitCode.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.GitCode.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.015</item>
    </style>
    
    <style name="TextAppearance.GitCode.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.015</item>
    </style>
    
    <style name="TextAppearance.GitCode.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.GitCode.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    
    <style name="TextAppearance.GitCode.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.025</item>
    </style>
    
    <style name="TextAppearance.GitCode.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.089</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.GitCode.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    
    <style name="TextAppearance.GitCode.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.17</item>
    </style>
    
    <!-- Monospace for Code -->
    <style name="TextAppearance.GitCode.Code" parent="TextAppearance.GitCode.Body2">
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    
    <!-- ============================================
         SHAPES
        Modern, rounded corner system
         ============================================ -->
    <style name="ShapeAppearance.GitCode.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.GitCode.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.GitCode.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- ============================================
         BUTTONS
         Modern button styles
         ============================================ -->
    <style name="Widget.GitCode.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.GitCode.Button</item>
        <item name="android:textColor">@color/dark_on_primary</item>
        <item name="backgroundTint">@color/dark_button_background</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.GitCode.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.GitCode.Button</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/dark_ripple_primary</item>
    </style>
    
    <style name="Widget.GitCode.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.GitCode.Button</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="strokeColor">@color/dark_button_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/dark_ripple_primary</item>
    </style>
    
    <!-- Compact Toolbar Button -->
    <style name="Widget.GitCode.Button.Compact" parent="Widget.GitCode.Button">
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="cornerRadius">20dp</item>
    </style>
    
    <!-- ============================================
         TEXT INPUT
         Clean input field styles
         ============================================ -->
    <style name="Widget.GitCode.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_input_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@color/dark_input_background</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintTextColor">@color/dark_text_hint</item>
        <item name="android:textColorHint">@color/dark_text_hint</item>
        <item name="errorTextColor">@color/dark_error</item>
        <item name="helperTextTextColor">@color/dark_on_surface_variant</item>
    </style>
    
    <style name="Widget.GitCode.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/dark_input_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <!-- ============================================
         CARD
         Modern card styles
         ============================================ -->
    <style name="Widget.GitCode.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/dark_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- ============================================
         DIALOG
         Professional dialog styles
         ============================================ -->
    <style name="ThemeOverlay.GitCode.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@color/dark_surface_dialog</item>
        <item name="android:colorBackground">@color/dark_surface_dialog</item>
        <item name="colorSurface">@color/dark_surface_dialog</item>
    </style>
    
    <style name="ThemeOverlay.GitCode.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/dark_surface_dialog</item>
        <item name="android:colorBackground">@color/dark_surface_dialog</item>
        <item name="colorSurface">@color/dark_surface_dialog</item>
    </style>
    
    <!-- ============================================
         TOOLBAR
         Clean toolbar styles
         ============================================ -->
    <style name="Widget.GitCode.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/dark_surface</item>
        <item name="titleTextColor">@color/dark_on_surface</item>
        <item name="subtitleTextColor">@color/dark_on_surface_variant</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <!-- ============================================
         DIVIDER
         Subtle divider styles
         ============================================ -->
    <style name="Widget.GitCode.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_divider</item>
    </style>
</resources>
