<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Brand Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

                <!-- App Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_title"
                    android:textAppearance="@style/TextAppearance.GitCode.Headline4"
                    android:textColor="@color/dark_primary"
                    android:textStyle="bold" />

                <!-- Brand Subtitle -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/app_tagline"
                    android:textAppearance="@style/TextAppearance.GitCode.Body2"
                    android:textColor="@color/dark_on_surface_variant" />

                <!-- Accent Line -->
                <View
                    android:layout_width="48dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/dark_primary" />

            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textAppearance="@style/TextAppearance.GitCode.Overline"
                    android:textColor="@color/dark_on_surface_variant"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <!-- Primary Action Card - New Project -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNewProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/dark_card_background"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/dark_border"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/dark_ripple">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <View
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@color/dark_primary_container" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="@string/new_project"
                            android:textAppearance="@style/TextAppearance.GitCode.Subtitle1"
                            android:textColor="@color/dark_on_surface" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            android:tint="@color/dark_on_surface_variant"
                            android:contentDescription="@string/add" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Secondary Action Cards Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Clone Repository -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardClone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/dark_card_background"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/dark_border"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/dark_ripple">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_clone"
                                android:tint="@color/dark_primary"
                                android:contentDescription="@string/clone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/clone_repository"
                                android:textAppearance="@style/TextAppearance.GitCode.Caption"
                                android:textColor="@color/dark_on_surface"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- GitHub Profiles -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardProfiles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/dark_card_background"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/dark_border"
                        app:strokeWidth="1dp"
                        app:rippleColor="@color/dark_ripple">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_github"
                                android:tint="@color/dark_primary"
                                android:contentDescription="@string/github" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/github_profiles"
                                android:textAppearance="@style/TextAppearance.GitCode.Caption"
                                android:textColor="@color/dark_on_surface"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Settings Action -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/dark_surface_variant"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:rippleColor="@color/dark_ripple">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@color/dark_on_surface_variant"
                            android:contentDescription="@string/settings" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="@string/settings"
                            android:textAppearance="@style/TextAppearance.GitCode.Body2"
                            android:textColor="@color/dark_on_surface_variant" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:rotation="180"
                            android:src="@drawable/ic_undo"
                            android:tint="@color/dark_on_surface_disabled"
                            android:contentDescription="@null" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Projects Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/projects_title"
                        android:textAppearance="@style/TextAppearance.GitCode.Headline6"
                        android:textColor="@color/dark_on_surface"
                        android:textStyle="bold" />

                    <!-- Project Count -->
                    <TextView
                        android:id="@+id/tvProjectCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 projects"
                        android:textAppearance="@style/TextAppearance.GitCode.Caption"
                        android:textColor="@color/dark_on_surface_variant"
                        android:background="@color/dark_surface_variant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                </LinearLayout>

                <!-- Projects List -->
                <LinearLayout
                    android:id="@+id/projectsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="48dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/dark_surface_variant"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/no_projects"
                        android:textAppearance="@style/TextAppearance.GitCode.Body2"
                        android:textColor="@color/dark_on_surface_variant"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
